#!/bin/bash
# kontrollib esimesed 20 kas on algarvud

# kontrollib, kas antud arv on algarv
function on_alg_arv() {
    local arv=$1

    # kas arv on v채iksem kui 2
    if [ "$arv" -lt 2 ]; then
        echo "$arv - ei ole algarv"
        return
    fi

    # m채rgib, kas arv on algarv
    for (( jagaja=2; jagaja*jagaja<=arv; jagaja++ )); do
        if (( arv % jagaja == 0 )); then
            echo "$arv - ei ole algarv"
            return
        fi
    done

    # Kui 체kski jagaja ei jaganud arvu, on see algarv
    echo "$arv - on algarv"
}

# Kontrollime 20 esimest t채isarvu
for (( arv=1; arv<=20; arv++ )); do
    on_alg_arv "$arv"
done
